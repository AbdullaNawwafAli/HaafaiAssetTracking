@model List<Asset>

<div class="table-responsive">

	<div class="card">
		<div class="card-body">

			<div class="container">
				<div class="row pt-0">
					<div class="col-6">
						<h2>Asset</h2>
					</div>
				
					<div class="col-6 text-end">
						<a class="btn btn-primary" asp-area="" asp-controller="Asset" asp-action="Create">Create Asset</a>

					</div>
				</div>
			</div>
			
			
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>assetNo</th>
						<th>AssetType</th>
						<th>AssetStatus</th>
						<th>Purchased Date</th>
						<th>Discarded Date</th>
						<th>Assigned Staff</th>
						<th>Assigned Date</th>
						<th>Last Returned Date</th>
						<th> </th>
					</tr>
				</thead>
				<tbody>
					@foreach (var asset in Model)
					{
						<tr>
							<td>@asset.AssetNo</td>
							<td>@asset.AssetType</td>
							<td>@asset.AssetStatus</td>
							<td>@asset.PurchasedDate</td>

							@if(@asset.DiscardedDate == null){
								<td>Not discarded</td>
							}
							else{
								<td>@asset.DiscardedDate</td>
							}

							@if (@asset.staffId == null)
							{
								<td>Not assigned</td>
							}
							else
							{
								<td>@asset.staffId</td>
							}

							@if (@asset.AssignedDate == null)
							{
								<td>Not Assigned</td>
							}
							else
							{
								<td>@asset.AssignedDate</td>
							}

							@if (@asset.LastReturnedDate == null)
							{
								<td>Not returned</td>
							}
							else
							{
								<td>@asset.LastReturnedDate</td>
							}
							<td>
								<a class="btn btn-secondary" asp-controller="Asset" asp-route-id="@asset.AssetNo" asp-action="Edit">Edit</a>
							</td>
						</tr>
					}
				</tbody>
			</table>
			
		</div>
	</div>
</div>
